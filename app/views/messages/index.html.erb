<%= form_for @newuser, url: {controller: "users", action: "create"} do |f| %>

  <%= f.label :name , "Username"%>
  <%= f.text_field :name %>

  <br>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <br>

  <%=  f.submit %>
<% end %>
